<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC 
	"-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="configuration" class="org.commontemplate.standard.ConfigurationSettings">
		<property name="logger" ref="logger" />
		<property name="defaultOutputFormatter" ref="defaultOutputFormatter" />
	</bean>
	
	<bean id="logger" class="org.commontemplate.standard.log.SimpleLogger"></bean>
	
	<bean id="defaultOutputFormatter" class="org.commontemplate.standard.format.DefaultOutputFormatter">
		<property name="nullValue" value="" />
		<property name="dateFormat" ref="yyyy-MM-dd HH:mm:ss" />
		<property name="numberFormat" ref="###0.###" />
	</bean>
	
	<bean id="directiveHandlerProvider" class="org.commontemplate.standard.directive.StandardDirectiveHandlerProvider">
		<property name="directiveHandlers">
			<map>
				<entry key="">
					<bean class=""></bean>
				</entry>
			</map>
		</property>
	</bean>
	
</beans>
