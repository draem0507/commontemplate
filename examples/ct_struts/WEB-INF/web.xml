<?xml version="1.0" encoding="UTF-8"?>
<web-app id="ct_struts" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>ct_struts</display-name>
	<listener>
		<listener-class>org.commontemplate.tools.web.EngineInitializeListener</listener-class>
	</listener>
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>org.commontemplate.tools.web.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
    <filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>*.ctl</url-pattern>
	</filter-mapping>
    <servlet>
		<servlet-name>struts</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
	    <servlet-name>commontemplate</servlet-name>
	    <servlet-class>org.commontemplate.tools.web.servlet.TemplateServlet</servlet-class>
	    <load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>struts</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>commontemplate</servlet-name>
	    <url-pattern>*.ctl</url-pattern>
	</servlet-mapping>
</web-app>
